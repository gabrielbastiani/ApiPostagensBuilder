generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// criar uma migration: yarn prisma migrate dev

model User {
  id       String  @id @default(uuid())
  photo    String? @default("")
  name     String  @unique @db.VarChar(75)
  email    String  @unique @db.VarChar(80)
  password String

  authenticated Boolean @default(false)

  created_at DateTime @default(now())
  updatedAt  DateTime @updatedAt

  posts             Post[]
  doclikesposts     DocLikesPost[]
  postrespondes     PostResponde[]
  doclikesrespondes DocLikesResponde[]

  @@map("users")
}

model PasswordRecovery {
  id    String @id @default(uuid())
  email String

  @@map("passwordRecoverys")
}

model Post {
  id          String  @id @default(uuid())
  description String?
  imgPost     String? @default("")
  like        Int?    @default(0)

  created_at DateTime? @default(now())
  updatedAt  DateTime  @updatedAt

  user User?   @relation(fields: [name], references: [name])
  name String?

  postresponde  PostResponde[]
  doclikesposts DocLikesPost[]

  @@map("posts")
}

model DocLikesPost {
  id    String  @id @default(uuid())
  docId String?

  user    User?   @relation(fields: [user_id], references: [id])
  user_id String?
  post    Post?   @relation(fields: [post_id], references: [id])
  post_id String?

  @@map("doclikesposts")
}

model PostResponde {
  id        String  @id @default(uuid())
  answer    String? @unique
  imgAnswer String? @default("")
  like      Int?    @default(0)

  created_at DateTime? @default(now())
  updatedAt  DateTime  @updatedAt

  user    User?   @relation(fields: [name], references: [name])
  name    String?
  post    Post?   @relation(fields: [post_id], references: [id])
  post_id String?

  doclikesrespondes DocLikesResponde[]

  @@map("postrespondes")
}

model DocLikesResponde {
  id        String  @id @default(uuid())
  docIdResp String?

  user            User?         @relation(fields: [user_id], references: [id])
  user_id         String?
  postrespondes   PostResponde? @relation(fields: [postresponde_id], references: [id])
  postresponde_id String?

  @@map("doclikesrespondes")
}